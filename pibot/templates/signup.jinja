{% extends "base.jinja" %}
{% set title="Login" %}

{% block data %}
  <h2>Sign Up</h2>
  <form method="POST">
    {% if error_message %}
      <div class="row">
        <div class="col s12 m4 l4">
          <div class="red" style="padding: 4px">
            {{ error_message }}
          </div>
        </div>
      </div>
    {% endif %}
    <div class="row">
      <div class="col s12 m4 l4 input-field">
        <input type="text" name="username" id="login_username" value="{{ username }}"/>
        <label for="login_username">Username</label>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m4 l4 input-field">
        <input type="password" name="password" id="login_password" />
        <label for="login_password">Password</label>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m4 l4 input-field">
        <input type="password" name="password_confirmation" id="login_password_confirmation" />
        <label for="login_password_confirmation">Password Confirmation</label>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m4 l4">
        <button class="btn waves-effect waves-light" type="submit" name="login">Sign Up
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
{% endblock %}
